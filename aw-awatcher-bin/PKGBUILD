_pkgname='aw-awatcher'
pkgname="${_pkgname}-bin"
pkgver='0.3.1'
pkgrel='1'
pkgdesc="ActivityWatch-compatible activity and idle watchers"
arch=('x86_64')
url="https://github.com/2e3s/awatcher"
license=('MPL-2.0')
depends=('gcc-libs' 'glibc' 'openssl')
optdepends=('activitywatch: ActivityWatch server')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
source=("${url}/releases/download/v${pkgver}/${_pkgname}_${pkgver}-1_amd64.deb")
sha256sums=("23c65f29b3b8285decaf13e32fadbeae1bb3d0ca40c7a70b0eda6d8078d798a2")

package() {
  bsdtar -xf data.tar.xz -C "$pkgdir/"
}
